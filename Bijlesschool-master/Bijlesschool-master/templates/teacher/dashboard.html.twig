{% extends 'base.html.twig' %}

{% block title %}Hello TeacherController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="example-wrapper">
        <h1>Hello {{ app.user.name}}!</h1>
        <div class="container">
            <div class="row">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">schoolles</th>
                        <th scope="col">doelles</th>
                        <th scope="col">student naam</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">update</th>
                        <th scope="col">delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lesson in lessons %}
                        <tr>
                            <td>{{ lesson.schoolles }}</td>
                            <td>{{ lesson.doelles }}</td>
                            <td>{{ lesson.student.name }}</td>
                            <td>{{ lesson.date |date("d-m-Y") }}</td>
                            <td>{{ lesson.time |date("H:i") }}</td>
                            <td>
                                <a class="nav-link " aria-current="page" href="{{ path('app_updatelesson', {id: lesson.id}) }}">
                                    <button type="hidden" class="btn btn-warning">update</button>
                                </a>
                            </td>
                            <td>
                                <a class="nav-link " aria-current="page" href="{{ path('app_deletelesson', {id: lesson.id}) }}">
                                    <button type="hidden" class="btn btn-danger">delete</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
